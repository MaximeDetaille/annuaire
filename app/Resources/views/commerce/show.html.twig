{% extends 'base.html.twig' %}

{% block body %}
    <h1>Commerce</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commerce.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ commerce.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ commerce.adresse }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ commerce.postcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ commerce.ville }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ commerce.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ commerce.image }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commerce_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('commerce_edit', { 'id': commerce.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
